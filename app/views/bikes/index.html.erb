<p id="notice"><%= notice %></p>

<h1>Listing Bikes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Manufacturer url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bikes.each do |bike| %>
      <tr>
        <td><%= bike.name %></td>
        <td><%= bike.manufacturer_url %></td>
        <td><%= link_to 'Show', bike %></td>
        <td><%= link_to 'Edit', edit_bike_path(bike), class: "warning button" %></td>
        <td><%= link_to 'Destroy', bike, class: "alert button", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bike', new_bike_path, class: "button" %>
